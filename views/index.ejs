<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>To-Do App</title>

  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-light">

  <div class="container my-5">
    <h2 class="text-center mb-4 fw-semibold">My To-Do List</h2>

    <!-- Add Task -->
    <form action="/tasks" method="POST" class="d-flex gap-2 mb-4">
      <input name="title" class="form-control" placeholder="Enter a new task" autocomplete="off" required>
      <button class="btn btn-primary">Add</button>
    </form>

    <!-- Task List -->
    <% if (tasks.length === 0) { %>
      <p class="text-center text-muted">No tasks yet â€” start by adding one!</p>
    <% } else { %>
      <ul class="list-group">
        <% tasks.forEach(task => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <% if (task.completed) { %>
                <s class="text-muted"><%= task.title %></s>
              <% } else { %>
                <span><%= task.title %></span>
              <% } %>
            </div>

            <div>
              <form action="/tasks/<%= task._id %>/toggle" method="POST" style="display:inline">
                <button class="btn btn-sm btn-outline-success"><%= task.completed ? 'Undo' : 'Done' %></button>
              </form>
              <form action="/tasks/<%= task._id %>/delete" method="POST" style="display:inline">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
